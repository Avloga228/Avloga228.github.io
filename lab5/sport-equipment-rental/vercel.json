{
    "version": 2,
    "builds": [
      {
        "src": "server.js",
        "use": "@vercel/node"
      },
      {
        "src": "dist/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "server.js"
      },
      {
        "src": "/(.*\\.css)",
        "headers": { "cache-control": "public, max-age=0, must-revalidate" },
        "dest": "/dist/$1"
      },
      {
        "src": "/(.*)",
        "dest": "/dist/$1"
      }
    ],
    "headers": [
      {
        "source": "/assets/(.*\\.css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=0, must-revalidate"
          }
        ]
      }
    ]
}